@using QuanLyTruyenThong_TuVan.Data
@using QuanLyTruyenThong_TuVan.Models
@using Microsoft.EntityFrameworkCore
@using Microsoft.AspNetCore.Identity
@inject ApplicationDbContext _dbContext
@inject UserManager<ApplicationResident> _userManager

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - QuanLyTruyenThong_TuVan</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/QuanLyTruyenThong_TuVan.styles.css" asp-append-version="true" />
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    QuanLyTruyenThong_TuVan
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target="#navbarCollapse" aria-controls="navbarCollapse"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarCollapse">
                    <ul class="navbar-nav me-auto mb-2 mb-sm-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Comment" asp-action="Index">Góp Ý</a>
                        </li>
                    </ul>

                    @* Tính số phản hồi chưa đọc của user *@
                    @{
                        var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
                        var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
                        int notifCount = 0;

                        if (User.Identity?.IsAuthenticated == true
                        && !(currentController == "Comment" && currentAction == "Details"))
                        {
                            var user = await _userManager.GetUserAsync(User);
                            if (user != null)
                            {
                                notifCount = await _dbContext.Responses
                                .Where(r => r.Comment.ResidentId == user.Id && !r.IsRead)
                                .CountAsync();
                            }
                        }
                    }

                    <ul class="navbar-nav mb-2 mb-sm-0">
                        <li class="nav-item">
                            <a class="nav-link position-relative" asp-area="" asp-controller="Comment" asp-action="Inbox">
                                <i class="bi bi-envelope-fill" style="font-size:1.25rem"></i>
                                @if (notifCount > 0)
                                {
                                    <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                                        @notifCount
                                        <span class="visually-hidden">phản hồi chưa đọc</span>
                                    </span>
                                }
                            </a>
                        </li>
                        <li class="nav-item">
                            <partial name="_LoginPartial" />
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
<body class="hold-transition sidebar-mini">
<div class="wrapper">
    <!-- Navbar -->
    <nav class="main-header navbar navbar-expand navbar-white navbar-light">
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
            </li>
            <li class="nav-item d-none d-sm-inline-block">
                <a href="/Home/Index" class="nav-link">Quản Lý Chung Cư</a>
            </li>
        </ul>
        <ul class="navbar-nav ml-auto">
            <li class="nav-item">
                <a class="nav-link" href="/Home/Index"><i class="fas fa-home"></i> Trang Chủ</a>
            </li>
            <li class="nav-item">
               <a class="nav-link" asp-area="" asp-controller="Forum" asp-action="Index"><i class="fas fa-bell"></i> Thông Báo</a>
            </li>
            <li class="nav-item">
               <a class="nav-link" asp-area="" asp-controller="Forum" asp-action="Index"><i class="fas fa-newspaper"></i> Tin Tức</a>
            </li>
            <li class="nav-item">
               <a class="nav-link" asp-area="" asp-controller="Forum" asp-action="Index"><i class="fas fa-pen"></i> Bài Viết</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-area="" asp-controller="Comment" asp-action="Index" ><i class="fas fa-comment"></i> Góp Ý</a>
            </li>
            <li class="nav-item">
                    <partial name="_LoginPartial" />
            </li>
        </ul>
    </nav>

    <!-- Main Sidebar (ẩn trên desktop, hiện khi cần) -->
    <aside class="main-sidebar sidebar-dark-primary elevation-4">
        <a href="/Home/Index" class="brand-link">
            <span class="brand-text font-weight-light">Quản Lý Chung Cư</span>
        </a>
        <div class="sidebar">
            <nav class="mt-2">
                <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu">
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a href="/Admin/Home" class="nav-link"><i class="nav-icon fas fa-tachometer-alt"></i><p>Dashboard</p></a>
                            </li>
                        }
                    <li class="nav-item">
                        <a href="/Home/Index" class="nav-link"><i class="nav-icon fas fa-home"></i><p>Trang Chủ</p></a>
                    </li>
                    <li class="nav-item">
                        <a href="/Comment/Inbox" class="nav-link"><i class="nav-icon fas fa-bell"></i><p>Hộp thư phản hồi</p></a>
                    </li>
                    <li class="nav-item">
                        <a href="/Notification/Index" class="nav-link"><i class="nav-icon fas fa-bell"></i><p>Về chúng tôi</p></a>
                    </li>
                    <li class="nav-item">
                        <a href="/News/Index" class="nav-link"><i class="nav-icon fas fa-newspaper"></i><p>Điều khoản</p></a>
                    </li>
                    <li class="nav-item">
                        <a href="/Post/Index" class="nav-link"><i class="nav-icon fas fa-pen"></i><p>Bảo mật</p></a>
                    </li>
                    <li class="nav-item">
                        <a href="/Feedback/Index" class="nav-link"><i class="nav-icon fas fa-comment"></i><p>Liên hệ</p></a>
                    </li>
                    <li class="nav-item">
                        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                            <button id="logout" type="submit" class="nav-link btn btn-link text-dark border-0">Logout</button>
                        </form>
                    </li>
                    
                </ul>
            </nav>
        </div>
    </aside>

    <!-- Content Wrapper -->
    <div class="content-wrapper">
        <section class="content">
            <div class="container-fluid main-content">
                @RenderBody()
            </div>
        </section>
    </div>
</div>

    <footer class="border-top footer text-muted mt-4">
        <div class="container">
            &copy; 2025 - QuanLyTruyenThong_TuVan - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
