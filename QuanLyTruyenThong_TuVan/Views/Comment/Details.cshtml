@model QuanLyTruyenThong_TuVan.Models.Comment

@{
    ViewData["Title"] = "Chi tiết góp ý";
}

<h1>Chi tiết góp ý</h1>

<div>
    <h4>Góp ý</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Tiêu đề
        </dt>
        <dd class="col-sm-10">
            @Model.Title
        </dd>
        <dt class="col-sm-2">
            Tên người dân
        </dt>
        <dd class="col-sm-10">
            @Model.ResidentName
        </dd>
        <dt class="col-sm-2">
            Nội dung
        </dt>
        <dd class="col-sm-10">
            @Model.Content
        </dd>
        <dt class="col-sm-2">
            Hình ảnh
        </dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <img src="@Model.ImageUrl" alt="Hình ảnh góp ý" style="max-width: 200px;" />
            }
            else
            {
                <span>Không có hình ảnh</span>
            }
        </dd>
        <dt class="col-sm-2">
            Loại
        </dt>
        <dd class="col-sm-10">
            @Model.Type
        </dd>
        <dt class="col-sm-2">
            Trạng thái
        </dt>
        <dd class="col-sm-10">
            @Model.Status.ToString()
        </dd>
        <dt class="col-sm-2">
            Ngày tạo
        </dt>
        <dd class="col-sm-10">
            @Model.CreatedAt
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Index">Quay lại danh sách</a>
</div>