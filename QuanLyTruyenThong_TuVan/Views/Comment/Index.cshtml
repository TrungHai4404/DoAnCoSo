@model IEnumerable<QuanLyTruyenThong_TuVan.Models.Comment>

@{
    ViewBag.Title = "Góp ý của tôi";
}

<h2>@ViewBag.Title</h2>

<div class="mb-4">
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-pencil-square me-1"></i> Tạo góp ý mới
    </a>
    <a asp-action="Inbox" class="btn btn-secondary ms-2">
        <i class="bi bi-inbox me-1"></i> Hộp thư góp ý
    </a>
</div>

@if (!Model.Any())
{
    <p><em>Bạn chưa gửi góp ý nào.</em></p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Tiêu đề</th>
                <th>Ngày gửi</th>
                <th>Trạng thái</th>
                <th>Phản hồi</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var c in Model)
            {
                <tr>
                    <td>@c.Title</td>
                    <td>@c.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                    <td>@c.Status</td>
                    <td>@c.Responses.Count()</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@c.Id" class="btn btn-sm btn-info">
                            <i class="bi bi-eye"></i> Xem
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
