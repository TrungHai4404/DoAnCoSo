@model IEnumerable<QuanLyTruyenThong_TuVan.Models.Comment>

@{
    ViewBag.Title = "Hộp thư góp ý của tôi";
}

<h2>@ViewBag.Title</h2>

<div class="mb-4">
    <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary me-2">
        ← Về Home
    </a>
</div>

@if (!Model.Any())
{
    <p><em>Bạn chưa gửi góp ý nào.</em></p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Tiêu đề</th>
                <th>Ngày gửi</th>
                <th>Trạng thái</th>
                <th>Phản hồi</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var c in Model)
            {
                <tr>
                    <td>@c.Title</td>
                    <td>@c.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                    <td>@c.Status</td>
                    <td>@c.Responses.Count()</td>
                    <td>
                        <a asp-controller="Comment"
                           asp-action="Details"
                           asp-route-id="@c.Id"
                           class="btn btn-sm btn-info">
                            Xem chi tiết
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
