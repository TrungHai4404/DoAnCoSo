@* File: Areas/Admin/Views/AdminComment/Index.cshtml *@
@model IEnumerable<QuanLyTruyenThong_TuVan.Models.Comment>

<h2>Quản lý Góp ý</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<table class="table table-striped">
    <thead>
        <tr>
            <th>Tiêu đề</th>
            <th>Người gửi</th>
            <th>Ngày gửi</th>
            <th>Số phản hồi</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var c in Model)
        {
            <tr>
                <td>@c.Title</td>
                <td>@c.ResidentName</td>
                <td>@c.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                <td>@c.Responses.Count()</td>
                <td>
                    <a asp-area="Admin"
                       asp-controller="AdminComment"
                       asp-action="Details"
                       asp-route-id="@c.Id"
                       class="btn btn-sm btn-info">
                        Chi tiết
                    </a>
                    <a asp-area="Admin"
                       asp-controller="AdminComment"
                       asp-action="Respond"
                       asp-route-id="@c.Id"
                       class="btn btn-sm btn-primary ms-1">
                        Phản hồi
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
