@model QuanLyTruyenThong_TuVan.Models.Notification

@{
    ViewData["Title"] = "Xóa thông báo";
    Layout = "_LayoutAdmin";
}

<div class="content-wrapper">
    <section class="content-header">
        <h1>Xóa thông báo</h1>
    </section>

    <section class="content">
        <div class="container-fluid">
            <div class="card">
                <div class="card-body">
                    <h3>Bạn có chắc chắn muốn xóa thông báo này?</h3>
                    <div>
                        <h4>@Model.Title</h4>
                        <p>@Model.Content</p>
                        <p><strong>Loại:</strong> @Model.Type</p>
                        <p><strong>Đối tượng:</strong> @Model.TargetAudience</p>
                        <p><strong>Ngày tạo:</strong> @Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</p>
                        @if (!string.IsNullOrEmpty(Model.ImageUrl))
                        {
                                <p><strong>Hình ảnh:</strong></p>
                                <img src="@Model.ImageUrl" alt="Notification image" class="img-fluid" style="max-width: 200px;" />
                        }
                    </div>

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <input type="submit" value="Xóa" class="btn btn-danger" />
                        <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
                    </form>
                </div>
            </div>
        </div>
    </section>
</div>