@model QuanLyTruyenThong_TuVan.Models.Apartment
@{
    ViewData["Title"] = "Xóa căn hộ";
    Layout = "_LayoutAdmin";
}
<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <div class="card">
        <div class="card-header"><h3 class="card-title">Xác nhận xóa</h3></div>
        <div class="card-body">
            <p>Bạn có chắc chắn muốn xóa căn hộ: <strong>@Model.ApartmentCode</strong>?</p>
        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-danger">Xóa</button>
            <a asp-action="Index" class="btn btn-secondary">Hủy</a>
        </div>
    </div>
</form>