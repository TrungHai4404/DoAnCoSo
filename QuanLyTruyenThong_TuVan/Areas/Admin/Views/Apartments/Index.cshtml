@model IEnumerable<QuanLyTruyenThong_TuVan.Models.Apartment>
@{
    ViewData["Title"] = "Danh sách căn hộ";
    Layout = "_LayoutAdmin";
}
<section class="content">
    <div class="container-fluid">
        <h1 class="mt-4">Danh sách căn hộ</h1>
        <a class="btn btn-primary mb-3" href="@Url.Action("Create")">Thêm căn hộ</a>
        <div class="card">
            <div class="card-body table-responsive">
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>Mã căn hộ</th>
                            <th>Tầng</th>
                            <th>Số phòng</th>
                            <th>Diện tích</th>
                            <th>Người ở</th>
                            <th>Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.ApartmentCode</td>
                                <td>@item.Floor</td>
                                <td>@item.RoomNumber</td>
                                <td>@item.Area m²</td>
                                <td>
                                    @(item.Residents != null && item.Residents.Any() ? $"{item.Residents.Count()} người" : "Trống")
                                </td>
                                <td>
                                    <a class="btn btn-info btn-sm" href="@Url.Action("Details", new { id = item.Id })">Chi tiết</a>
                                    <a class="btn btn-warning btn-sm" href="@Url.Action("Edit", new { id = item.Id })">Sửa</a>
                                    <a class="btn btn-danger btn-sm" href="@Url.Action("Delete", new { id = item.Id })">Xóa</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>
