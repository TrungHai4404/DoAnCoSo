@model QuanLyTruyenThong_TuVan.Models.ApplicationResident
@{
    ViewData["Title"] = "Chỉnh sửa tài khoản cư dân";
    Layout = "_LayoutAdmin";
}

<section class="content">
    <div class="container-fluid">
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">Chỉnh sửa khoản cư dân</h3>
            </div>
            <!-- /.card-header -->
            <div class="card-body">
                @if (TempData["Success"] != null)
                {
                    <div class="alert alert-success alert-dismissible">
                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                        @TempData["Success"]
                    </div>
                }

                <form asp-action="Edit" method="post">
                    <input type="hidden" asp-for="Id" />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="FullName" class="control-label"></label>
                        <input asp-for="FullName" class="form-control" placeholder="Nhập họ và tên" disabled />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Email</label>
                        <input asp-for="Email" class="form-control" disabled />
                        <span class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label>Mật khẩu mới (nếu muốn thay đổi)</label>
                        <input name="password" type="password" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Gender" class="control-label"></label>
                        <select asp-for="Gender" class="form-control" disabled>
                            <option value="">Chọn giới tính</option>
                            <option value="Male">Nam</option>
                            <option value="Female">Nữ</option>
                            <option value="Other">Khác</option>
                        </select>
                        <span asp-validation-for="Gender" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ApartmentId" class="control-label"></label>
                        <select asp-for="ApartmentId" class="form-control">
                            <option value="">Chọn căn hộ</option>
                            @foreach (var apartment in ViewBag.Apartments)
                            {
                                <option value="@apartment.Id">@apartment.ApartmentCode</option>
                            }
                        </select>
                        <span asp-validation-for="ApartmentId" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label class="control-label">Chọn quyền</label>
                        <select name="selectedRoles" class="form-control">
                            <option value="Admin">Admin</option>
                            <option value="Staff">Staff</option>
                            <option value="Resident">Resident</option>
                        </select>
                        <span class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Cập nhật</button>
                        <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
                    </div>
                </form>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}