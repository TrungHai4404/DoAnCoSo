
@model IEnumerable<QuanLyTruyenThong_TuVan.Models.Post>
@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Danh sách bài viết";
}
<h2>@ViewData["Title"]</h2>
<p>
    <a asp-area="Admin" asp-controller="Post" asp-action="Create" class="btn btn-sm btn-info">
        <i class="bi bi-plus-circle"></i> Tạo bài mới
    </a>
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Tiêu đề</th>
            <th>Chủ đề</th>
            <th>Người gửi</th>
            <th>Ngày tạo</th>
            <th>Hình</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.Topic</td>
                <td>@item.Sender?.FullName</td>
                <td>@item.CreatedAt.ToString("g")</td>
                <td>
                    @if (!string.IsNullOrEmpty(item.ImageUrl))
                    {
                        <img src="@item.ImageUrl" style="max-height:80px" />
                    }
                </td>
                <td>
                    <a asp-area="Admin" asp-controller="Post" asp-action="Display" asp-route-id="@item.Id" class="btn btn-sm btn-info">
                        <i class="bi bi-info-circle"></i> Xem
                    </a>
                    <a asp-area="Admin" asp-controller="Post" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">
                        <i class="bi bi-pencil-square"></i> Sửa
                    </a>
                    <a asp-area="Admin" asp-controller="Post" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                        <i class="bi bi-trash"></i> Xóa
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
