@model QuanLyTruyenThong_TuVan.Models.Post
@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Chi tiết bài viết";
}
<div class="card" style="max-width: 800px; margin: 20px auto; box-shadow: 0 0 10px rgba(0,0,0,0.1);">
    <div class="card-header bg-info text-white">
        <h4 class="mb-0">@Model.Title</h4>
    </div>
    <div class="card-body">
        <div class="mb-3 text-center">
            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <img src="@Model.ImageUrl"
                     class="img-fluid rounded"
                     style="max-height:300px; object-fit:cover;"
                     alt="Post image" />
            }
        </div>
        <dl class="row">
            <dt class="col-sm-3">Chủ đề</dt>
            <dd class="col-sm-9">@Model.Topic</dd>

            <dt class="col-sm-3">Người gửi</dt>
            <dd class="col-sm-9">@Model.Sender?.FullName</dd>

            <dt class="col-sm-3">Ngày tạo</dt>
            <dd class="col-sm-9">@Model.CreatedAt.ToString("f")</dd>
        </dl>
        <hr />
        <h5>Nội dung</h5>
        <div class="post-content" style="line-height:1.6; padding: 10px; background:#f9f9f9; border-radius:4px;">
            @Html.Raw(Model.Content.Replace("\n", "<br/>"))
        </div>
    </div>
    <div class="card-footer text-right">
        <a asp-area="Admin" asp-controller="Post" asp-action="Index" class="btn btn-sm btn-info">
            <i class="bi bi-arrow-left-circle"></i> Quay lại
        </a>
    </div>
</div>
