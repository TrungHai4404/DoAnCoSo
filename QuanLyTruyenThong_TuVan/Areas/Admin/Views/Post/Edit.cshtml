
@model QuanLyTruyenThong_TuVan.Models.Post
@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Chỉnh sửa bài viết";
}
<h2>@ViewData["Title"]</h2>

<form asp-area="Admin" asp-controller="Post" asp-action="Edit" method="post" enctype="multipart/form-data">
    <input asp-for="Id" type="hidden" />
    <input asp-for="ImageUrl" type="hidden" />

    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Content"></label>
        <textarea asp-for="Content" class="form-control" rows="5"></textarea>
        <span asp-validation-for="Content" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Topic"></label>
        <select asp-for="Topic" class="form-control" asp-items="Html.GetEnumSelectList<PostTopic>()"></select>
    </div>
    <div class="form-group">
        <label asp-for="SenderId">Người gửi</label>
        <select asp-for="SenderId" class="form-control" asp-items="ViewBag.Senders"></select>
    </div>
    <div class="form-group">
        <label>Hình hiện tại</label><br />
        <img id="imgPreview" src='@(Model.ImageUrl ?? "/images/placeholder.png")' style="max-height:100px;margin-bottom:10px;" />
        <input type="file" id="imageFile" name="imageFile" class="form-control-file" />
    </div>
    <button type="submit" class="btn btn-sm btn-warning">
        <i class="bi bi-pencil-square"></i> Cập nhật
    </button>
    <a asp-area="Admin" asp-controller="Post" asp-action="Index" class="btn btn-sm btn-secondary">
        <i class="bi bi-x-circle"></i> Hủy
    </a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        document.getElementById('imageFile').addEventListener('change', function (e) {
            var file = e.target.files[0];
            if (!file) return;
            var reader = new FileReader();
            reader.onload = function (evt) {
                document.getElementById('imgPreview').src = evt.target.result;
            };
            reader.readAsDataURL(file);
        });
    </script>
}
